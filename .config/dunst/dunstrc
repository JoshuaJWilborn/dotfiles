[global]
    font = Roboto Regular 18
    markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "0x20-10+40"
    shrink = yes
    transparency = 0
    idle_threshold = 60
    #monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = no
    line_height = 0
    separator_height = 2
    padding = 10
    horizontal_padding = 20
    frame_color = "#16A085"
    separator_color = frame
    frame_width = 3
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /bin/firefox-developer-edition -new-tab
    icon_position = left
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[shortcuts]
    close = ctrl+space
 
    # close all notifications
    close_all = ctrl+shift+space
 
    # redisplay last message(s)
    # On the US keyboard layout 'grave' is normally above TAB and left of '1'.
    history = ctrl+grave
 
    # context menu
    context = ctrl+shift+period
