#!/bin/bash
bold='\e[1m'
red='\e[31m'
reset='\e[0m'
failed=`grep -lr Failed /tmp/aws-pipeline-status/`
IFS=$'\n'; set -f
for path in $failed
do
  IFS="\/";
  read -r _ _ _ name <<< "$path"
  echo -e "$red$name: failing $reset https://console.aws.amazon.com/codesuite/codepipeline/pipelines/$name/view"
done

sleep 10
