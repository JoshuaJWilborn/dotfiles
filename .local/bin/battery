string=`acpi | grep -oE "[0-9]{1,3}%"`
int=`echo $string | grep -oE "[0-9]+"`
green='#[fg=#b5bd68]'
yellow='#[fg=#f0c674]'
orange='#[fg=de935f]'
red='#[fg=cc6666]'

if (("$int" >= 80)); then
  icon="$green "
elif (("$int" >= 60)); then
icon="$yellow "
elif (("$int" >= 40)); then
icon="$orange"
elif (("$int" >= 20)); then
icon="$red"
else
icon="$red"
fi

echo -e "$icon $string"
